مكن لنا تحديد نوع المتغير بالطريقة التالية
 

  var num:Int            عدد صحيح
  var num:Short      عدد قصير
  var num:Long         عدد كبير
  var num:Float       عدد عشري
  var num:Double    عدد مضاعف
  var name:String    متغير نصي
  var b:Boolean      متغير تعبيري
  var c:Char          متغير حرفي


العمليات الحسابية معاالامثلة


الصيغة	العملية
+	      الجمع
–	       الطرح
*	       الضرب
/       	القسمة       
٪     	باقي القسمة
++	     اضافة واحد لقيمة
=+	     اضافة ومساواة
=-	     طرح ومساوة
=*	     ضرب ومساواة
=/	      قسمة ومساواة
– –	     طرح واحد من قيمة
 
 
 1.	 var a = 3
2.	   var b = 2
3.	   print(a + b)          // result 5 
 
  
1.	  var a = 7
2.	  var b = 5
3.	  print(a – b)       // result 2
:
1.	   var a = 4
2.	   var b = 3
3.	   print(a * b)       // result 12


      var a = 10
1.	   var b = 2
2.	  print(a / b)     // result 5
